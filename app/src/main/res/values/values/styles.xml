<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontStyle">@style/Regular</item>
    </style>

    <!-- Splash theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Regular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/courier_new</item>
    </style>

    <style name="Bold" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/courier_new_bold</item>
    </style>

    <style name="Regular.H1">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Bold.H1">
        <item name="android:textSize">@dimen/text_huge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Regular.H2">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Regular.H2.Bold">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Regular.H5.Bold">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Regular.H5">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Bold.H5">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

</resources>
