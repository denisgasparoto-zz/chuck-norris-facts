<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large"
    tools:context=".presentation.facts.FactsActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_facts_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_facts_iv_logo_layout_height"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:padding="@dimen/spacing_medium"
        app:srcCompat="@drawable/ic_app_logo" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/activity_facts_tv_welcome"
        style="@style/Regular.H2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/activity_facts_tv_welcome"
        android:textAlignment="center"
        android:textColor="#FFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/spacing_huge">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/activity_facts_mb_open_facts_by_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:padding="@dimen/spacing_large"
            android:text="@string/facts_activity_mb_start"
            android:textColor="@color/colorBlack"
            app:backgroundTint="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>
